<dataConfig>
    <propertyWriter dateFormat="yyyy-MM-dd HH:mm:ss" type="SimplePropertiesWriter"
                    directory="data" filename="dih.properties" locale="en-GB" />
    <dataSource type="JdbcDataSource"
                driver="org.mariadb.jdbc.Driver"
                url="jdbc:mysql://localhost/oer_server"
                user="oer_server_dev"
                password="oer_server_dev"/>
    <document name="program_data">
        <entity name="program_entry" query="SELECT * from program_entry"
                pk="id" rootEntity="true">
            <field column="id" name="id" indexed="true" stored="true"/>
            <field column="title" name="title" type="text_de" indexed="true" stored="true"/>
            <field column="description" name="description" type="text_de" indexed="false" stored="true"/>
            <field column="start_date_time" name="start_date_time" indexed="false" stored="true"/>
            <field column="end_date_time" name="end_date_time" indexed="false" stored="true"/>
            <field column="duration_in_minutes" name="duration" indexed="false" stored="true"/>
            <field column="channel_id" name="channel_id" indexed="true" stored="true" />
        </entity>
    </document>
</dataConfig>
